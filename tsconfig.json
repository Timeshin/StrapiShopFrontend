{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/styles/*": ["src/styles/*"],
      "@/components": ["src/components"],
      "@/layouts": ["src/layouts/"],
      "@/config/*": ["src/config/*"],
      "@/pages/*": ["src/pages/*"],
      "@/store": ["src/redux"],
      "@/services/*": ["src/services/*"],
      "@/actions/*": ["src/redux/actions/*"],
      "@/modules/*": ["src/modules/*"],
      "@/types/*": ["src/types/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/helpers/*": ["src/helpers/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "webpack.config.js"
  ]
}
